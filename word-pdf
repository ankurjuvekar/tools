    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const fileInput = document.getElementById('file-input');
            const uploadArea = document.getElementById('upload-area');
            const convertBtn = document.getElementById('convert-btn');
            const resetBtn = document.getElementById('reset-btn');
            const downloadBtn = document.getElementById('download-btn');
            const loadingElement = document.getElementById('loading');
            const resultsElement = document.getElementById('results');
            const pdfToWordBtn = document.getElementById('pdf-to-word');
            const wordToPdfBtn = document.getElementById('word-to-pdf');
            
            // Conversion type (default: PDF to Word)
            let conversionType = 'pdf-to-word';
            let originalFile = null;
            let convertedBlob = null;
            
            // Event Listeners
            uploadArea.addEventListener('click', () => fileInput.click());
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = 'var(--primary)';
                uploadArea.style.backgroundColor = 'rgba(67, 97, 238, 0.1)';
            });
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.style.borderColor = '#ccc';
                uploadArea.style.backgroundColor = 'transparent';
            });
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '#ccc';
                uploadArea.style.backgroundColor = 'transparent';
                
                if (e.dataTransfer.files.length) {
                    handleFileSelect(e.dataTransfer.files[0]);
                }
            });
            
            fileInput.addEventListener('change', () => {
                if (fileInput.files.length) {
                    handleFileSelect(fileInput.files[0]);
                }
            });
            
            pdfToWordBtn.addEventListener('click', () => {
                conversionType = 'pdf-to-word';
                pdfToWordBtn.classList.add('active');
                wordToPdfBtn.classList.remove('active');
                resetTool();
            });
            
            wordToPdfBtn.addEventListener('click', () => {
                conversionType = 'word-to-pdf';
                wordToPdfBtn.classList.add('active');
                pdfToWordBtn.classList.remove('active');
                resetTool();
            });
            
            convertBtn.addEventListener('click', convertDocument);
            resetBtn.addEventListener('click', resetTool);
            downloadBtn.addEventListener('click', downloadConvertedFile);
            
            // Functions
            function handleFileSelect(file) {
                // Check file type based on conversion type
                const validTypes = conversionType === 'pdf-to-word' 
                    ? ['application/pdf']
                    : ['application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document'];
                
                if (!validTypes.includes(file.type)) {
                    alert(`Please select a ${conversionType === 'pdf-to-word' ? 'PDF' : 'Word DOC/DOCX'} file`);
                    return;
                }
                
                // Check file size (max 10MB)
                if (file.size > 10 * 1024 * 1024) {
                    alert('File size exceeds 10MB limit. Please choose a smaller file.');
                    return;
                }
                
                originalFile = file;
                
                // Display file info
                uploadArea.innerHTML = `
                    <i class="fas fa-file-alt"></i>
                    <p>${file.name}</p>
                    <p class="file-info">${formatFileSize(file.size)} • ${file.type}</p>
                `;
                
                // Enable convert button
                convertBtn.disabled = false;
                
                // Set original stats
                document.getElementById('original-format').textContent = 
                    conversionType === 'pdf-to-word' ? 'PDF' : 'Word';
                document.getElementById('original-size').textContent = formatFileSize(file.size);
                
                // For demo purposes, we'll simulate page count
                const pageCount = Math.max(1, Math.floor(file.size / 50000));
                document.getElementById('original-pages').textContent = pageCount;
                
                // Set preview image based on file type
                const previewImg = document.getElementById('original-preview');
                previewImg.src = conversionType === 'pdf-to-word' 
                    ? 'https://via.placeholder.com/300x400?text=PDF+File' 
                    : 'https://via.placeholder.com/300x400?text=Word+File';
            }
            
            function convertDocument() {
                if (!originalFile) return;
                
                // Show loading state
                loadingElement.style.display = 'block';
                resultsElement.style.display = 'none';
                
                // Simulate conversion delay (in a real app, this would be actual conversion)
                setTimeout(() => {
                    // For demo purposes, we'll simulate a converted file
                    convertedBlob = new Blob(["Simulated converted file content"], { type: 
                        conversionType === 'pdf-to-word' 
                            ? 'application/vnd.openxmlformats-officedocument.wordprocessingml.document' 
                            : 'application/pdf' 
                    });
                    
                    // Display converted stats
                    document.getElementById('converted-format').textContent = 
                        conversionType === 'pdf-to-word' ? 'Word (DOCX)' : 'PDF';
                    
                    // Simulate converted file size (slightly different from original)
                    const convertedSize = originalFile.size * (Math.random() * 0.4 + 0.8);
                    document.getElementById('converted-size').textContent = formatFileSize(convertedSize);
                    
                    // Keep same page count for demo
                    document.getElementById('converted-pages').textContent = 
                        document.getElementById('original-pages').textContent;
                    
                    // Set preview image for converted file
                    const convertedPreview = document.getElementById('converted-preview');
                    convertedPreview.src = conversionType === 'pdf-to-word' 
                        ? 'https://via.placeholder.com/300x400?text=Word+File' 
                        : 'https://via.placeholder.com/300x400?text=PDF+File';
                    
                    // Hide loading and show results
                    loadingElement.style.display = 'none';
                    resultsElement.style.display = 'block';
                    
                    // Scroll to results
                    resultsElement.scrollIntoView({ behavior: 'smooth' });
                }, 1500);
            }
            
            function downloadConvertedFile() {
                if (!convertedBlob) return;
                
                const link = document.createElement('a');
                const url = URL.createObjectURL(convertedBlob);
                const extension = conversionType === 'pdf-to-word' ? '.docx' : '.pdf';
                const filename = originalFile.name.replace(/\.[^/.]+$/, '') + '_converted' + extension;
                
                link.href = url;
                link.download = filename;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                URL.revokeObjectURL(url);
            }
            
            function resetTool() {
                // Reset file input
                fileInput.value = '';
                originalFile = null;
                convertedBlob = null;
                
                // Reset upload area
                uploadArea.innerHTML = `
                    <i class="fas fa-file-upload"></i>
                    <p>Drag & drop your file here or click to browse</p>
                    <p class="file-info">Supports ${conversionType === 'pdf-to-word' ? 'PDF' : 'DOC, DOCX'} (Max 10MB)</p>
                `;
                
                // Disable convert button
                convertBtn.disabled = true;
                
                // Hide results and loading
                loadingElement.style.display = 'none';
                resultsElement.style.display = 'none';
                
                // Reset preview images
                document.getElementById('original-preview').src = 
                    'https://via.placeholder.com/300x400?text=Original+File';
                document.getElementById('converted-preview').src = 
                    'https://via.placeholder.com/300x400?text=Converted+File';
                
                // Reset stats
                document.getElementById('original-format').textContent = '-';
                document.getElementById('original-size').textContent = '-';
                document.getElementById('original-pages').textContent = '-';
                document.getElementById('converted-format').textContent = '-';
                document.getElementById('converted-size').textContent = '-';
                document.getElementById('converted-pages').textContent = '-';
            }
            
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const navLinks = document.getElementById('navLinks');
            
            mobileMenuBtn.addEventListener('click', () => {
                navLinks.classList.toggle('active');
                mobileMenuBtn.innerHTML = navLinks.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });
        });
    </script>
</body>
</html>
